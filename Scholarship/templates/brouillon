    {% if message %}
        Swal.fire({
            title: {% if is_error %}"Erreur" {% else %}"Succès" {% endif %},
            text: "{{ message }}",
            icon: {% if is_error %}"error" {% else %}"success" {% endif %},
            confirmButtonText: "OK"
        }).then(() => {
            // Redirection après avoir fermé l'alerte
